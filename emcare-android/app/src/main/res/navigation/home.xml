<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home.xml"
    app:startDestination="@+id/homeFragment">

    <action
        android:id="@+id/action_global_settingsFragment"
        app:destination="@+id/settingsFragment"
        app:launchSingleTop="true" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.argusoft.who.emcare.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_locationFragment"
            app:destination="@id/locationFragment" />
    </fragment>

    <fragment
        android:id="@+id/locationFragment"
        android:name="com.argusoft.who.emcare.ui.home.location.LocationFragment"
        tools:layout="@layout/fragment_location" >
        <action
            android:id="@+id/action_locationFragment_to_patientFragment"
            app:destination="@id/patientFragment" />
    </fragment>

    <fragment
        android:id="@+id/patientFragment"
        android:name="com.argusoft.who.emcare.ui.home.patient.PatientFragment"
        tools:layout="@layout/fragment_patient">
        <action
            android:id="@+id/action_patientFragment_to_addPatientFragment"
            app:destination="@id/addPatientFragment" />
        <action
            android:id="@+id/action_patientFragment_to_patientDetailsFragment"
            app:destination="@id/patientDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addPatientFragment"
        android:name="com.argusoft.who.emcare.ui.home.patient.add.AddPatientFragment"
        tools:layout="@layout/fragment_add_patient" />

    <fragment
        android:id="@+id/patientDetailsFragment"
        android:name="com.argusoft.who.emcare.ui.home.patient.details.PatientDetailsFragment"
        tools:layout="@layout/fragment_patient_details" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.argusoft.who.emcare.ui.home.settings.SettingsFragment"
        tools:layout="@layout/fragment_settings" />
</navigation>